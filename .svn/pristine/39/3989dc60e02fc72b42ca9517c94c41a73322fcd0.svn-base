						<table
							class="table align-middle p-4 mb-0 table-hover table-shrink">
							<!-- Table head -->
							<thead class="table-light">
								<tr>
									<th scope="col" class="border-0 rounded-start">1</th>
									<th scope="col" class="border-0">2</th>
